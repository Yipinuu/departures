<h1>Articles#new</h1>

<%= form_for(current_user.articles.build(:specol_id => @specol.id), :url => :create_article) do |f|%>

  <%= f.label :title,"标题:" %>
  <%= f.text_field :title %>

  <br />
  <%= f.text_area :content %>
 
  <br/>
  <%= f.label :user_id, "登录中的账户:"%>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :specol_id %>

  <br/>
  <%= f.label :spepage_id,"选择分页:" %>
  <%= f.select :spepage_id, @specol.spepages.collect{|p| [p.pagename, p.id]} %>

  <br/>
  <%= f.submit "发表" %>

<%end%>


<% content_for :tags do %>
<div id="tags">
<%= link_to "所在专栏:"+ "#{@article.specol.title}", show_specol_path(@specol.title),class:"button line-white small tag" %>
<div id="linkto">
<%= link_to '返回专栏', show_specol_path(:title => @specol.title), class:"button line-grey pill link_to" %>
</div>
</div>
<% end %>
